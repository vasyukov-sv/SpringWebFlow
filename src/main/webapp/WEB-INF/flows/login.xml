<?xml version="1.0" encoding="UTF-8"?>
<!--suppress ELValidationInJSP -->
<flow xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.springframework.org/schema/webflow"
      xsi:schemaLocation="
        http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.4.xsd"
      start-state="loginForm">

    <var name="user" class="ru.javabegin.training.springwebflow.objects.User"/>
    <view-state id="loginForm" view="login" model="user">
        <transition on="submit" to="actionCheckLogin"/>
        <transition on="createUser" to="createUserFlow"/>
    </view-state>

    <subflow-state id="createUserFlow" subflow="create-user">
        <input name="user"/>
        <transition on="userCreated" to="loginForm">
            <!--suppress SpringElInspection, ELValidationInJSP -->
            <set name="flashScope.message" value="'User Created!'" type="string"/>
        </transition>
        <transition on="cancelled" to="loginForm"/>
    </subflow-state>

    <action-state id="actionCheckLogin">
        <evaluate expression="userService.userExist(user)"/>
        <transition on="yes" to="mainContent"/>
        <transition on="no" to="loginForm">
            <!--suppress SpringElInspection, ELValidationInJSP -->
            <set name="flashScope.message" value="'Check user!'" type="string"/>
        </transition>
    </action-state>

    <view-state id="mainContent" view="main"/>
</flow>